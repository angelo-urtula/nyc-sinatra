<form method='post' action='/figures'>
<h1>Figure Name:</h1>
<input type='text' name='figure[name]' id='figure_name'>
<h1>Titles:</h1>
<% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="<%= title.id %>" value="<%= title.id %>"><%= title.name %></input><br>
    <% end %>
    <br>
    
    <h1>Create Titles:</h1>
    <input type='text' name='title[name]' id='new_title'>
    <h1>Landmarks:</h1>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %></input>
        <label for="landmarks"><%= landmark.name %></label>
        <% end %>
        <br>
        <h1>Create New Landmark:</h1>
    <input type='text' name='landmark[name]' id='new_landmark'>
    <input type='submit' id="Create New Figure">
</form>