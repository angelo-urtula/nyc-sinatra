<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form method='post' action='/landmarks/<%= @landmark.id %>'>
<input id='hidden' type='hidden' name='_method' value='patch'>
<label>Edit Landmark Name:</label><br>
<input type='text' name='landmark[name]' value='<%= @landmark.name %>' id='name'>
<label>Edit Landmark Year:</label><br>
<input type='text' name='landmark[year_completed]' value='<%= @landmark.year_completed %>' id='year_completed'>
<input type='submit' value='Edit Landmark' id='Edit Landmark'>
</form>
<a class="button" href="/landmarks">Landmarks</a>
